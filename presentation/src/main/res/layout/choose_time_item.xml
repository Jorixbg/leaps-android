<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/time_item_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="10:00"
        android:textColor="@color/primaryBlue"
        android:textStyle="bold"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/create_event_choose_repeat_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/time_item_lbl"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/ic_choose" />

    <View
        android:id="@+id/create_event_divider4"
        android:layout_width="match_parent"
        android:layout_below="@+id/time_item_lbl"
        android:layout_marginTop="16dp"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        />





</RelativeLayout>