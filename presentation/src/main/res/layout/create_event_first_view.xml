<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/create_event_first_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="@string/create_event"
        android:textAllCaps="true"
        android:textColor="@color/primaryBlue"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_first_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/create_event_first_picture_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/create_event_pic_lbl"
                android:textColor="@color/primaryBlue"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/create_event_main_pic_imageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"
                android:textColor="@color/primaryBlue"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/create_event_main_pic_placeholder"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_image_upload_placeholder"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/primaryBlue"
                android:textSize="28sp" />
            
            <ImageView
                android:id="@+id/first_image_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:scaleType="fitXY"
                android:layout_toEndOf="@+id/create_event_main_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_main_pic_placeholder"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/create_event_first_pic_placeholder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_main_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_main_pic_placeholder"
                android:background="@drawable/round_image_upload_placeholder"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/primaryBlue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/create_event_first_pic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="-16dp"
                android:layout_marginStart="-16dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/create_event_first_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_first_pic_placeholder"
                app:srcCompat="@drawable/close_red_btn" />

            <ImageView
                android:id="@+id/second_image_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_first_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_first_pic_placeholder"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/create_event_second_pic_placeholder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_first_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_first_pic_placeholder"
                android:background="@drawable/round_image_upload_placeholder"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/primaryBlue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/create_event_second_pic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="-16dp"
                android:visibility="gone"
                android:layout_marginStart="-16dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/create_event_second_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_second_pic_placeholder"
                app:srcCompat="@drawable/close_red_btn" />

            <ImageView
                android:id="@+id/third_image_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_second_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_second_pic_placeholder"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/create_event_third_pic_placeholder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_second_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_second_pic_placeholder"
                android:background="@drawable/round_image_upload_placeholder"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/primaryBlue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/create_event_third_pic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="-16dp"
                android:layout_marginStart="-16dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/create_event_third_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_third_pic_placeholder"
                app:srcCompat="@drawable/close_red_btn" />

            <ImageView
                android:id="@+id/fourth_image_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_third_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_third_pic_placeholder"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/create_event_fourth_pic_placeholder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_third_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_third_pic_placeholder"
                android:background="@drawable/round_image_upload_placeholder"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/primaryBlue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/create_event_fourth_pic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:visibility="gone"
                android:layout_marginLeft="-16dp"
                android:layout_marginStart="-16dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/create_event_fourth_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_fourth_pic_placeholder"
                app:srcCompat="@drawable/close_red_btn" />

            <ImageView
                android:id="@+id/fifth_image_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_fourth_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_fourth_pic_placeholder"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"/>


            <TextView
                android:id="@+id/create_event_fifth_pic_placeholder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/create_event_fourth_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_fourth_pic_placeholder"
                android:background="@drawable/round_image_upload_placeholder"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/primaryBlue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/create_event_fifth_pic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_first_picture_lbl"
                android:layout_marginLeft="-16dp"
                android:visibility="gone"
                android:layout_marginStart="-16dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/create_event_fifth_pic_placeholder"
                android:layout_toRightOf="@+id/create_event_fifth_pic_placeholder"
                app:srcCompat="@drawable/close_red_btn" />

            <TextView
                android:id="@+id/create_event_first_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_main_pic_placeholder"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/title"
                android:textColor="@color/primaryBlue"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_event_first_title_et"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/create_event_first_title"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/create_event_first_description_et"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:maxLength="45"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/round_blue_edit_text"
                android:hint="@string/event_title"
                android:inputType="textCapSentences"
                android:textColorHint="@color/primaryBlue" />

            <TextView
                android:id="@+id/create_event_first_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_first_title_et"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/description"
                android:textColor="@color/primaryBlue"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_event_first_description_et"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_below="@+id/create_event_first_description"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/round_blue_edit_text"
                android:gravity="start"
                android:hint="@string/type_description"
                android:inputType="textCapSentences"
                android:textColorHint="@color/primaryBlue" />

            <TextView
                android:id="@+id/create_event_first_workout_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_first_description_et"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/workout_type"
                android:textColor="@color/primaryBlue"
                android:textStyle="bold" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/create_events_tags_flex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/create_event_first_workout_type"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:dividerDrawable="@drawable/flex_divider"
                app:flexWrap="wrap"
                app:showDivider="beginning|middle"
                >

            </com.google.android.flexbox.FlexboxLayout>

        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/create_event_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/next_big" />

</RelativeLayout>