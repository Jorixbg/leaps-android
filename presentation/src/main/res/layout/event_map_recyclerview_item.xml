<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="20dp"
    android:layout_height="148dp"
    xmlns:tools="http://schemas.android.com/tools">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/cal_recycler_item_pic"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />
        <com.example.xcomputers.leaps.utils.CustomTextView
            android:id="@+id/cal_recycler_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAllCaps="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="28sp"
            tools:text="hoops in the park"
            android:textColor="@color/primaryBlue"
            android:background="@android:color/white"
            android:singleLine="true"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/primaryBlue"
                android:drawableStart="@drawable/in_cal"
                android:drawableLeft="@drawable/in_cal"
                />
            <TextView
                android:id="@+id/cal_recycler_item_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center|left"
                tools:text="Tue, 13:30, City Stadium"/>


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/map_recycler_indicator"
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </TextView>

</android.support.v7.widget.CardView>