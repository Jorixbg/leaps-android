<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/single_message_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/profile_placeholder"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/message_text"
        android:text="hi man, how are you?"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/single_message_image"
        android:layout_toEndOf="@+id/single_message_image"
        android:layout_toRightOf="@+id/single_message_image"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/single_message_image"
        app:layout_constraintLeft_toRightOf="@+id/single_message_image"
        android:layout_marginLeft="8dp" />



</RelativeLayout>