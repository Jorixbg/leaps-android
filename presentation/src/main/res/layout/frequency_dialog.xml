<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/daily_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/time_stamp_daily_fragment"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/primaryBlue"/>

    <View
        android:id="@+id/create_event_divider3"
        android:layout_width="match_parent"
        android:layout_below="@+id/create_event_end_lbl"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        />

    <TextView
        android:id="@+id/weekly_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/time_stamp_weekly_fragment"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/primaryBlue"/>


</LinearLayout>