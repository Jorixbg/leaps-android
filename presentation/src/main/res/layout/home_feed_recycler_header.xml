<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/home_feed_header_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/lbl_popular_events_near_you"
        android:textAllCaps="true"
        android:textColor="@color/primaryBlue"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/feed_header_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_action_next"
        android:drawableEnd="@drawable/ic_action_next"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/lbl_recycler_header_see_all"
        android:textAllCaps="true"
        android:textColor="@color/primaryBlue" />

</RelativeLayout>