<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:layout_marginBottom="1dp"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cal_recycler_item_pic"
        android:layout_width="144dp"
        android:scaleType="fitXY"
        android:layout_height="144dp"
        />
    <com.example.xcomputers.leaps.utils.CustomTextView
        android:id="@+id/cal_recycler_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cal_recycler_item_pic"
        android:layout_toRightOf="@+id/cal_recycler_item_pic"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textAllCaps="true"
        android:textSize="34sp"
        android:singleLine="true"
        android:lines="1"
        tools:text="hoops in the park"
        android:ellipsize="end"
        android:textColor="@color/primaryBlue"
        />

    <TextView
        android:id="@+id/cal_recycler_item_name"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@+id/cal_recycler_item_title"
        android:layout_alignStart="@+id/cal_recycler_item_title"
        android:layout_below="@+id/cal_recycler_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jack Daniel"
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/primaryBlue"
        />

    <TextView
        android:id="@+id/cal_recycler_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cal_recycler_item_name"
        android:layout_alignLeft="@+id/cal_recycler_item_name"
        android:layout_below="@+id/cal_recycler_item_name"
        android:layout_marginTop="16dp"
        android:textColor="@color/primaryBlue"
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/in_cal"
        android:drawableLeft="@drawable/in_cal"
        tools:text="Tue, 13:30, City Stadium"
        />

    </RelativeLayout>

</android.support.v7.widget.CardView>